  author = {K{\"u}rster, Martin and Trifonov, Trifon and Reffert, Sabine and Kostogryz, Nadiia M. and Rodler, Florian},
  month = mar,
  year = {2015},
  keywords = {Astrophysics - Earth and Planetary Astrophysics,Astrophysics - Solar and Stellar Astrophysics},
  file = {arXiv.org Snapshot:/home/joao/.zotero/zotero/yjus8s6s.default/zotero/storage/WPG47J3M/1503.html:text/html;Kürster_etal_2015.pdf:/home/joao/phd/papers/Kürster_etal_2015.pdf:application/pdf}
